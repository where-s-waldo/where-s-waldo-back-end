generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Map {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  src         String

  characters   Character[]
  leaderBoards LeaderBoardEntry[]
}

model Character {
  id   Int    @id @default(autoincrement())
  name String
  x    Float
  y    Float
  src  String

  mapId Int
  map   Map @relation(fields: [mapId], references: [id])
}

model LeaderBoardEntry {
  id   Int      @id @default(autoincrement())
  name String
  time Float 

  mapId       Int
  leaderBoard Map @relation(fields: [mapId], references: [id])
}
